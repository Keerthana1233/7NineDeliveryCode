<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    android:weightSum="100"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="100"
        android:fillViewport="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="100"
            >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:gravity="center_vertical"
        tools:ignore="MissingConstraints">

            <LinearLayout
                android:id="@+id/back_feed"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:background="@drawable/ripple_effect"
                android:gravity="center">


                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_go_back_left_arrow_"

                    />

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Relationship with Bank"
                android:textSize="20dp"
                android:textColor="#fff"
                android:textStyle="bold"
                android:layout_marginHorizontal="10dp"
                android:id="@+id/toolbar_title" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:weightSum="100"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="18dp"
            >

            <TextView
                android:id="@+id/rela_sbi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Do you have an existing relationship with SBI ?"
                android:textSize="16dp"
                android:background="@drawable/border_grey"
                android:padding="12dp"
                android:drawableRight="@drawable/ic_down_arrow"
                android:textColor="#000"
                 />

            <TextView
                android:id="@+id/type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Type of Relationship"
                android:textColor="#000"
                android:fontFamily="@font/segoeui"
                android:background="@drawable/border_grey"
                android:padding="12dp"
                android:visibility="invisible"
                android:layout_marginTop="20dp"
                android:drawableRight="@drawable/ic_down_arrow"
                android:textSize="16dp"
                />

            <EditText
                android:id="@+id/account_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Account Number"
                android:inputType="number"
                android:paddingVertical="20dp"
                android:fontFamily="@font/segoeui"
                android:textSize="16dp"
                android:visibility="invisible"

                android:textColor="#000"
                android:background="@drawable/border_grey"
                android:padding="12dp"
                android:layout_marginTop="20dp"                />


            <EditText
                android:id="@+id/ifsc_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="IFSC Code"
                android:paddingVertical="20dp"
                android:fontFamily="@font/segoeui"
                android:textSize="16dp"
                android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:textColor="#000"
                android:visibility="invisible"
                android:background="@drawable/border_grey"
                android:padding="12dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"/>
        </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="SUBMIT"
            android:textSize="16dp"
            android:gravity="center"
            android:padding="15dp"
            android:fontFamily="@font/segoeui"
            android:background="@drawable/border_filled_red"
            android:textColor="#fff"
            />



    </LinearLayout>


</LinearLayout>