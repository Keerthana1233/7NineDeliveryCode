        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="92"
        android:background="#fff"
        >


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_lang"
            android:scrollbars="vertical"
