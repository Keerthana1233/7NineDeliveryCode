<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="100"
    android:layout_marginBottom="5dp"
    >

    <LinearLayout
        android:id="@+id/branch_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="15dp"
        android:paddingLeft="5dp"
        android:background="#ffffff"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="25">


                <ImageView
                    android:id="@+id/image"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginHorizontal="15dp"
                    android:src="@drawable/bank_of_baroda_logo"
                    android:padding="5dp"
                    android:background="@drawable/border_grey"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:layout_weight="75">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="15dp"
                    android:fontFamily="@font/segoeui"
                    android:gravity="center_vertical"
                    android:text="Jagdish Kumar"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/bank_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="15dp"
                    android:fontFamily="@font/segoeui"
                    android:gravity="center_vertical"
                    android:text="Bank of Baroda"
                    android:textColor="#000"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/acc_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="15dp"
                    android:fontFamily="@font/segoeui"
                    android:gravity="center_vertical"
                    android:text="Account Number :"
                    android:textColor="#000"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/ifsc_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="15dp"
                    android:fontFamily="@font/segoeui"
                    android:gravity="center_vertical"
                    android:text="IFSC Code"
                    android:textColor="#000"
                    android:textSize="14dp" />
                <TextView
                    android:id="@+id/emi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="15dp"
                    android:fontFamily="@font/segoeui"
                    android:gravity="center_vertical"
                    android:text="EMI"
                    android:textColor="#000"
                    android:textSize="14dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_marginRight="10dp"
                    >
                    <TextView
                        android:id="@+id/delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/segoeui"
                        android:text="Delete"
                        android:textColor="@color/blue"
                        android:paddingVertical="5dp"
                        android:paddingHorizontal="30dp"
                        android:textSize="12dp" />
                    <TextView
                        android:id="@+id/pay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/segoeui"
                        android:text="Edit"
                        android:textColor="#fff"
                        android:paddingVertical="5dp"
                        android:paddingHorizontal="30dp"
                        android:background="@drawable/border_filled_red"
                        android:textSize="12dp" />


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </LinearLayout>




</LinearLayout>