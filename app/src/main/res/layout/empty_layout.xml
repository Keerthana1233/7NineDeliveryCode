<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="100"
    android:orientation="vertical"
    android:background="#fff">
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/green"
      android:gravity="center_vertical"
      >

    <!-- <android.support.v7.widget.Toolbar
         android:id="@+id/toolbar"
         android:minHeight="?attr/actionBarSize"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         app:titleTextColor="@android:color/white"
         >
-->

    <LinearLayout
        android:id="@+id/back_feed"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@drawable/ripple_effect"
        android:gravity="center">


      <ImageView
          android:layout_width="20dp"
          android:layout_height="wrap_content"
          android:layout_gravity="center_vertical"
          android:src="@drawable/ic_go_back_left_arrow_"

          />

    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Bank Offers"
        android:textSize="20dp"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_marginHorizontal="10dp"
        android:id="@+id/toolbar_title" />


  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center"
      android:orientation="vertical"
      >
  <ImageView
      android:id="@+id/no_dat_img"
      android:layout_width="200dp"
      android:layout_height="200dp"
      android:src="@drawable/no_offer"
      android:layout_gravity="center"
      />

    <TextView
        android:id="@+id/no_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Bank Offers are available"
        android:fontFamily="@font/segoeui"
        android:textColor="#000"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        />

  <TextView
      android:id="@+id/continue_text"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Apply Anyway"
      android:fontFamily="@font/segoeui"
      android:textColor="#2E34C8"
      android:layout_marginTop="30dp"
      android:textSize="20dp"
      />

</LinearLayout>
</LinearLayout>