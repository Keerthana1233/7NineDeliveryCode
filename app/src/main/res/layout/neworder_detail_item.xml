<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="100"
    android:background="#fff"
    android:layout_marginBottom="2dp"
    >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100"
            android:layout_marginLeft="5dp"
            android:paddingVertical="30dp"
            android:layout_marginTop="0dp"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="30">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/biscuit_milk_glucose" />

                <TextView
                    android:id="@+id/loan_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoeui"
                    android:gravity="center"
                    android:text=""
                    android:textColor="#000"
                    android:textSize="16dp" />

                <!--<de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/bank_img"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/avatarmale"
                    app:civ_border_color="#dcdcdc"
                    app:civ_border_width="0.0dp" />-->

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="5dp"
                android:layout_weight="55">

                <TextView
                    android:id="@+id/prod_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoeui"
                    android:gravity="center_vertical"

                    android:textColor="#000"
                    android:layout_marginLeft="5dp"
                    android:textSize="16dp" />
                <TextView
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoeui"
                    android:gravity="center_vertical"

                    android:layout_marginLeft="5dp"
                    android:textSize="14dp" />
                <TextView
                    android:id="@+id/addr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoeui"
                    android:gravity="center_vertical"

                    android:layout_marginLeft="5dp"
                    android:textSize="14dp" />
                <TextView
                    android:id="@+id/amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoeui"
                    android:gravity="center_vertical"

                    android:textColor="#000"
                    android:layout_marginLeft="5dp"
                    android:textSize="16dp" />
                <TextView
                android:id="@+id/cod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoeui"
                android:gravity="center_vertical"

                    android:drawableLeft="@drawable/cashondel"
                android:textSize="14dp" />

            </LinearLayout>


        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/dimen_10dp">
        <TextView
            android:id="@+id/view"
            android:layout_width="0dp"
            android:layout_height="39dp"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:layout_weight="30"
            android:padding="@dimen/dimen_10dp"
            android:gravity="center_vertical"
            android:background="@drawable/border_black"
           android:drawablePadding="@dimen/dimen_10dp"
            android:drawableLeft="@drawable/ic_phone_call"
            android:fontFamily="@font/segoeui"
            android:text="99********" />
        <TextView
            android:id="@+id/vieworder"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:layout_weight="30"
            android:padding="@dimen/dimen_10dp"
            android:gravity="center_vertical"
            android:background="@drawable/border_black"
            android:drawablePadding="@dimen/dimen_10dp"
            android:drawableLeft="@drawable/ic_visibility"
            android:fontFamily="@font/segoeui"
            android:text="View" />
        <TextView
            android:id="@+id/accept"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/dimen_10dp"
            android:layout_marginRight="@dimen/dimen_10dp"
            android:layout_weight="30"
            android:padding="@dimen/dimen_10dp"
            android:gravity="center_vertical"
            android:background="@drawable/border_black"
            android:drawablePadding="@dimen/dimen_10dp"
            android:drawableLeft="@drawable/ic_correct"
            android:fontFamily="@font/segoeui"
            android:text="Accept"
            />
    </LinearLayout>
    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:background="#dcdcdc" />

    </LinearLayout>

