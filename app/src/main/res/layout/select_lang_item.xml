            android:id="@+id/right_img"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:layout_gravity="center"
            android:src="@drawable/ic_verified_grey"
            android:textColor="#fff" />


